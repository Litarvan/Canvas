{% extends 'base.twig' %}

{% block title %}Search result{% endblock %}

{% block head %}
    <link href="{{ res('css/search-result.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    {% if groups|length > 0 %}
        <h1>Groups</h1><br />

        {% for f in groups %}
            <div class="entry" onclick="window.location='{{ f.file }}'">
                {% if f.icon != "" %}
                    <img class="icon" src="{{ root() ~ f.icon }}" />
                {% endif %}

                <div class="entry-content {% if f.icon == "" %} no-icon {% endif %}">
                    <h3>{{ f.name }}</h3>
                    <p>{{ f.desc }}</p><br />
                </div>
            </div>
        {% endfor %}

        {% if artifacts|length > 0 %}<br/>{% endif %}
    {% endif %}

    {% if artifacts|length > 0 %}
        <h1>Artifacts</h1><br />

        {% for f in artifacts %}
            <div class="entry" onclick="window.location='{{ f.file }}'">
                {% if f.icon != "" %}
                    <img class="icon" src="{{ root() ~ f.icon }}" />
                {% endif %}

                <div class="entry-content {% if f.icon == "" %} no-icon {% endif %}">
                    <h3>{{ f.name }}</h3>
                    <p>{{ f.desc }}</p><br />
                </div>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}