{% extends 'base.twig' %}

{% block title %}Tree{% endblock %}

{% block head %}
    <link href="{{ res('css/tree.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <h1>{{ group }}</h1>

    {% if type == "group" %}
        <div class="files-group">
            {% for f in groups %}
                <div class="entry" onclick="window.location='{{ (group == "" ? "" : group ~ '.') ~ f }}'">
                    <h3>{{ f }}</h3>
                    <p>Group : {{ group }} > {{ f }}</p><br />
                </div>
            {% endfor %}
        </div>
    {% elseif type == "artifact" %}
        <div class="files-group">
            {% for f in artifacts %}
                <div class="entry" onclick="window.location='{{ group ~ '/' ~ f }}'">
                    <h3>{{ f }}</h3>
                    <p>Artifact : {{ group }} >> {{ f }}</p><br />
                </div>
            {% endfor %}
        </div>
    {% elseif type == "version" %}
        <div class="files-group">
            {% for f in versions %}
                <div class="entry" onclick="window.location='../../package/{{ group ~ '/' ~ artifact ~ '/' ~ f ~ '/' }}'">
                    <h3>{{ f }}</h3>
                    <p>Version : {{ group }} >> {{ artifact }} >>> {{ f }}</p><br />
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}