{% extends 'base.twig' %}

{% block title %}Tree{% endblock %}

{% block head %}
    <link href="{{ res('css/tree.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    {% if type == "group" %}
        <div class="files-group">
            {% for f in groups %}
                <a href="{{ (group == "" ? "" : group ~ '.') ~ f }}">{{ f }}</a><br />
            {% endfor %}
        </div>
    {% elseif type == "artifact" %}
        <div class="files-group">
            {% for f in artifacts %}
                <a href="{{ group ~ '/' ~ f }}">{{ f }}</a><br />
            {% endfor %}
        </div>
    {% elseif type == "version" %}
        <div class="files-group">
            {% for f in versions %}
                <a href="../../package/{{ group ~ '/' ~ artifact ~ '/' ~ f ~ '/' }}">{{ f }}</a><br />
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}